int get_id()
{
phonebook ob;
int id;
fstream file("phone.dat",ios::in|ios::binary);
if(!file)
id=1;
else
{
while(1)
{
file.read((char *)&ob,sizeof(ob));
if(file.eof())
break;
}
getch();
id=ob.getid()+1;
}
file.close();
return(id);
}




